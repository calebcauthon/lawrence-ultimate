!!!
%html{:lang => "en"}
	%head
		%meta{:charset => "utf-8"}
		%title Lawrence Ultimate [Frisbee]
		%meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
		%meta{:content => "", :name => "description"}
		%meta{:content => "", :name => "author"}

		/[if lt IE 9]
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
		/ Le styles
		%script{:src => "/js/jquery.js"}		
		%link{:href => "/bootstrap/css/bootstrap.css", :type => "text/css", :rel => "stylesheet"}
		%link{:href => "/css/style.css", :type => "text/css", :rel => "stylesheet"}
		:css
			body {
				padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
			}

			.hero-unit {
			  padding: 60px;
			  margin-bottom: 30px;
			  background-color: #f5f5f5;
			  -webkit-border-radius: 6px;
			  -moz-border-radius: 6px;
			  border-radius: 6px;
			}		
			.well.highlight {
				background-color: #E6E6E6;
			}

		%link{:href => "img/favicon.ico", :rel => "shortcut icon"}
		%link{:href => "img/apple-touch-icon.png", :rel => "apple-touch-icon"}
		%link{:href => "img/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}
		%link{:href => "img/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}
		%link(href="http://fonts.googleapis.com/css?family=Chelsea+Market|Days+One|Pompiere" rel="stylesheet" type="text/css")
	%body
		.navbar
			.hero-unit(style="padding: 0 60px;")
				.logo(style="height: 118px; margin: 0 auto; width: 940px;")
					%a(href='/' style="color: black; text-decoration: none;")
						.imageWrap(style="float:left; margin-top: 10px;")
							%img(src='/img/LUFL_logo_empty.png' width='100' height='100')
						.heroCopyWrap
							.copy(style="font-size: 3em; font-family: 'Days One'; padding-top: 48px;") Lawrence Ultimate
							.tinyCopy(style="margin-top:5px; margin-left: 5px;") ultimate frisbee in Lawrence, KS
			.navbar-inner
				.container
					%a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
						%span.icon-bar
						%span.icon-bar
						%span.icon-bar
					%a.brand{:href => "#"} LUSL:
					.nav-collapse
						%ul.nav
							%li
								%a{:href => "/standings"} Standings
							%li
								%a{:href => "/full_schedule"} Schedule
							%li
								%a{:href => "/teams"} Rosters
							
					/ /.nav-collapse
		.container
			= yield

