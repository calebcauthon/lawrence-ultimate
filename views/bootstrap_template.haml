!!!
%html{:lang => "en"}
	%head
		%meta{:charset => "utf-8"}
		%title Bootstrap, from Twitter
		%meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
		%meta{:content => "", :name => "description"}
		%meta{:content => "", :name => "author"}
		/ Le HTML5 shim, for IE6-8 support of HTML elements
		/[if lt IE 9]
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
		/ Le styles
		%script{:src => "../assets/js/jquery.js"}		
		%link{:href => "/bootstrap.css", :type => "text/css", :rel => "stylesheet"}
		%link{:href => "/style.css", :type => "text/css", :rel => "stylesheet"}
		:css
			body {
				padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
			}

			.hero-unit {
			  padding: 60px;
			  margin-bottom: 30px;
			  background-color: #f5f5f5;
			  -webkit-border-radius: 6px;
			  -moz-border-radius: 6px;
			  border-radius: 6px;
			}		
			.well.highlight {
				background-color: #E6E6E6;
			}
		%link{:href => "../assets/css/bootstrap-responsive.css", :rel => "stylesheet"}
		/ Le fav and touch icons
		%link{:href => "images/favicon.ico", :rel => "shortcut icon"}
		%link{:href => "images/apple-touch-icon.png", :rel => "apple-touch-icon"}
		%link{:href => "images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}
		%link{:href => "images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}
		%link(href="http://fonts.googleapis.com/css?family=Chelsea+Market|Days+One|Pompiere" rel="stylesheet" type="text/css")
	%body
		.navbar
			.hero-unit(style="padding: 0 60px;")
				.logo(style="height: 118px; margin: 0 auto; width: 940px;")
					%a(href='/' style="color: black; text-decoration: none;")
						.imageWrap(style="float:left; margin-top: 10px;")
							%img(src='/images/LUFL_logo_empty.png' width='100' height='100')
						.heroCopyWrap
							.copy(style="font-size: 3em; font-family: 'Days One'; padding-top: 48px;") Lawrence Ultimate
							.tinyCopy(style="margin-top:5px; margin-left: 5px;") ultimate frisbee in Lawrence, KS
			.navbar-inner
				.container
					%a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
						%span.icon-bar
						%span.icon-bar
						%span.icon-bar
					%a.brand{:href => "#"} Play:
					.nav-collapse
						%ul.nav
							%li
								%a{:href => "/"} Summer League
					/ /.nav-collapse
		.container
			= yield
							
					
		/ /container
		/
			Le javascript
			\==================================================
		/ Placed at the end of the document so the pages load faster			
		%script{:src => "../assets/js/bootstrap-transition.js"}
		%script{:src => "../assets/js/bootstrap-alert.js"}
		%script{:src => "../assets/js/bootstrap-modal.js"}
		%script{:src => "../assets/js/bootstrap-dropdown.js"}
		%script{:src => "../assets/js/bootstrap-scrollspy.js"}
		%script{:src => "../assets/js/bootstrap-tab.js"}
		%script{:src => "../assets/js/bootstrap-tooltip.js"}
		%script{:src => "../assets/js/bootstrap-popover.js"}
		%script{:src => "../assets/js/bootstrap-button.js"}
		%script{:src => "../assets/js/bootstrap-collapse.js"}
		%script{:src => "../assets/js/bootstrap-carousel.js"}
		%script{:src => "../assets/js/bootstrap-typeahead.js"}
